# Routes
# This file defines all application routes(Higher priority routes first)
# ~~~~

# Home page
GET     /                    controllers.Application.index()

POST    /person              controllers.Application.addPerson()
GET     /persons             controllers.Application.getPersons

# Agency alerts download
GET     /septa               controllers.SeptaAlertsController.downloadAlerts()

# Public API endpoints
POST    /register            controllers.RegistrationController.register()
POST    /subscribe           controllers.SubscriptionController.subscribe()

# Signup
GET     /signup              controllers.SignupController.signup()
POST    /signup/adduser      controllers.SignupController.addUser()

# SplendidLog
->  /logs                    splendidlog.Routes

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file        controllers.Assets.at(path="/public", file)
